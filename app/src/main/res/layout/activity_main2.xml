<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2C2C"
    tools:context=".MainActivity2">


    <TextView
        android:id="@+id/textViewAnswer"
        android:layout_width="410sp"
        android:layout_height="115dp"
        android:background="@drawable/text"
        android:gravity="end"
        android:paddingTop="40dp"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNumber">

    </TextView>

    <TextView
        android:id="@+id/textViewNumber"
        android:layout_width="410sp"
        android:layout_height="115dp"
        android:background="@drawable/text"
        android:gravity="end"
        android:paddingTop="40dp"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="@string/devided"
        android:textColor="@color/colorAccent"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonMultiply"
        app:layout_constraintEnd_toEndOf="parent">

    </Button>

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="@string/mult"
        android:textColor="@color/colorAccent"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSubtact"
        app:layout_constraintEnd_toEndOf="parent">

    </Button>

    <Button
        android:id="@+id/buttonSubtact"
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="@string/minus"
        android:textColor="@color/colorAccent"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonAdd"
        app:layout_constraintEnd_toEndOf="parent">

    </Button>

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="@string/sum"
        android:textColor="@color/colorAccent"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonEqual"
        app:layout_constraintEnd_toEndOf="parent">

    </Button>

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="@string/equal"
        android:textColor="#FF5722"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </Button>

    <Button
        android:id="@+id/button7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="@string/_7"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toStartOf="@+id/buttonMultiply">

    </Button>

    <Button
        android:id="@+id/backSpace"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:drawableStart="@drawable/ic_baseline_backspace_24"
        android:drawableTint="#FFEB3B"
        android:gravity="center_horizontal|top"
        android:paddingStart="35dp"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        app:layout_constraintEnd_toStartOf="@+id/buttonPercent"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="@string/dot"
        android:textColor="#ffffff"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonEqual">

    </Button>

    <Button
        android:id="@+id/button0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="@string/_0"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonPI">

    </Button>

    <Button
        android:id="@+id/sin"
        android:layout_width="90sp"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="@string/sin_x"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/backSpace"
        app:layout_constraintEnd_toStartOf="@+id/tan">

    </Button>

    <Button
        android:id="@+id/anS"
        android:layout_width="90sp"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="@string/ans"
        android:textColor="#FFEB3B"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonDivide"
        app:layout_constraintEnd_toEndOf="parent">

    </Button>

    <Button
        android:id="@+id/cos"
        android:layout_width="90sp"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="@string/cos_x"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonClear"
        app:layout_constraintEnd_toStartOf="@+id/sin">

    </Button>

    <Button
        android:id="@+id/tan"
        android:layout_width="90sp"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="@string/tan_x"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonPercent"
        app:layout_constraintEnd_toStartOf="@+id/anS">

    </Button>

    <Button
        android:id="@+id/buttonPI"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="@string/PI"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonDot">

    </Button>

    <Button
        android:id="@+id/button4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="@string/_4"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        app:layout_constraintEnd_toStartOf="@+id/buttonSubtact">

    </Button>

    <Button
        android:id="@+id/button8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="@string/_8"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toStartOf="@+id/button7">

    </Button>

    <Button
        android:id="@+id/button3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="@string/_3"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/button0"
        app:layout_constraintEnd_toStartOf="@+id/button2">

    </Button>

    <Button
        android:id="@+id/button9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="@string/_9"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toStartOf="@+id/button8">

    </Button>

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="@string/ac"
        android:textColor="#FFEB3B"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/button9"
        app:layout_constraintEnd_toStartOf="@+id/backSpace">

    </Button>

    <Button
        android:id="@+id/button5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="@string/_5"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toStartOf="@+id/button4">

    </Button>

    <Button
        android:id="@+id/button1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="@string/_1"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonDot"
        app:layout_constraintEnd_toStartOf="@+id/buttonAdd">

    </Button>

    <Button
        android:id="@+id/button6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="@string/_6"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toStartOf="@+id/button5">

    </Button>

    <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="@string/_2"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonPI"
        app:layout_constraintEnd_toStartOf="@+id/button1">

    </Button>

    <Button
        android:id="@+id/buttonPercent"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button"
        android:text="@string/mod"
        android:textColor="@color/colorAccent"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintEnd_toStartOf="@+id/buttonDivide">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>
